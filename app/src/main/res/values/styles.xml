<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="loader_style">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="rates_title">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="currency_id_text">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#191C1F</item>
    </style>

    <style name="currency_name_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#8B959E</item>
    </style>

    <style name="currency_value_edit">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#191C1F</item>
    </style>

</resources>
